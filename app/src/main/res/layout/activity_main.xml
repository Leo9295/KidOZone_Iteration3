<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".activityService.MainActivity">

    <Button
        android:id="@+id/imagePuzzleGame"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/puzzle_game_btn_pic" />


    <Button
        android:id="@+id/imageLunchGame"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:layout_below="@+id/imagePuzzleGame"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lunch_box_btn_pic"/>

    <Button
        android:id="@+id/imageWasteGame"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:layout_below="@+id/imageLunchGame"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sort_waste_btn_pic"/>

    <Button
        android:id="@+id/aboutUsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/info_button" />


</RelativeLayout>